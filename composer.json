{
    "name":        "arcanesoft/blog",
    "description": "Blog package for ARCANESOFT/Foundation.",
    "homepage":    "https://github.com/ARCANESOFT/Blog",
    "keywords":    [
        "arcanedev", "arcanesoft", "blog", "posts", "categories", "tags", "cms"
    ],
    "authors":  [
        {
            "name":     "ARCANEDEV",
            "email":    "arcanedev.maroc@gmail.com",
            "homepage": "https://github.com/arcanedev-maroc",
            "role":     "Developer"
        }
    ],
    "type":    "library",
    "license": "MIT",
    "require": {
        "php":                        ">=5.6.4",
        "arcanedev/laravel-markdown": "~1.2",
        "arcanedev/taxonomies":       "~0.2",
        "arcanesoft/auth":            "~2.0",
        "arcanesoft/core":            "~1.5",
        "arcanesoft/seo":             "~1.0"
    },
    "require-dev": {
        "phpunit/phpcov":  "~3.0",
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "psr-4": {
            "Arcanesoft\\Blog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Arcanesoft\\Blog\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "testbench": "composer require --dev \"orchestra/testbench=~3.4.0\""
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
